<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.magfra.aster.LoginActivity">

    <EditText
        android:id="@+id/user_cf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codice Fiscale"
        android:inputType="text" />


    <EditText
        android:id="@+id/psw_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/accedi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="accedi" />

    <TextView
        android:id="@+id/per_registrazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp"
        android:text="Non sei registrato?\nRegistrati!!"
        android:textColor="@android:color/holo_blue_light" />
</LinearLayout>